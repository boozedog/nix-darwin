{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "statix check",
      "type": "shell",
      "command": "statix",
      "args": [
        "check",
        "--format=errfmt"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "runOptions": {
        "runOn": "folderOpen" // Or "lineOnSave" for near-real-time on save
      },
      "problemMatcher": {
        "owner": "nix",
        "severity": "warning",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.+?):(\\d+):(\\d+): (warning|error): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Checking",
          "endsPattern": "^Done"
        }
      }
    }
  ]
}